@model NurseManagmentSystem.Models.Device;

<div class="row">
    <div class="col-md-9">
        <form asp-action="CreateDevice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="serialNumber" class="control-label"></label>
                <input asp-for="serialNumber" class="form-control" />
                <span asp-validation-for="serialNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input id="Add" type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}